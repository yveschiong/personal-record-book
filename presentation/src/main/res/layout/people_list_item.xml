<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.yveschiong.personalrecordbook.common.OnAdapterViewClicked" />

        <variable
            name="person"
            type="com.yveschiong.personalrecordbook.entities.Person" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listItemMargin"
        android:layout_marginTop="@dimen/listItemMargin"
        android:layout_marginRight="@dimen/listItemMargin"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> listener.onClicked(person)}">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/listItemMargin">

            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/full_name(person.firstName, person.middleName, person.lastName)}"
                android:textColor="@color/colorPrimary"
                tools:text="Yves Chun-Yu Chiong" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
